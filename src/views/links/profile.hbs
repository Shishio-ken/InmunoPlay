<main class="perfil-container">
  <section class="perfil-card" aria-label="Perfil de usuario">
    <img
      id="perfil-avatar"
      src="https://i.imgur.com/2Q2XjIG.png"
      alt="Avatar de usuario"
      class="perfil-avatar"
      tabindex="0"
      title="Haz clic para cambiar el avatar"
      aria-describedby="avatar-desc"
    />
    <input
      type="file"
      id="perfil-avatar-input"
      accept="image/*"
      style="display: none;"
      aria-label="Cambiar imagen de avatar"
    />

    <div style="text-align: center;">
      <button class="perfil-avatar-btn" onclick="document.getElementById('perfil-avatar-input').click()">Cambiar Avatar</button>
    </div>

    <p class="perfil-text"><strong>Nombre:</strong> {{nombre}} {{apellido}}</p>
    <p class="perfil-text"><strong>Username:</strong> {{username}}</p>
    <p class="perfil-text"><strong>Email:</strong> {{correo}}</p>
    <p class="perfil-text"><strong>Rol:</strong> {{rol}}</p>


    <button class="primary-btn" id="logoutBtn">Cerrar sesiÃ³n</button>
  </section>
</main>

<script src="/js/profile.js"></script>
